/* Mixins:
   ========================================================================== */
// px to rem
rem($pixels, $context = $mainFontSize)
  if unitless($pixels)
    $pixels = $pixels * 1px
  if unitless($context)
    $context = $context * 1px
  $pixels / $context * 1rem
// set size with 1 or 2 params
size($width, $height = $width)
  width: $width
  height: $height
// placeholder mixin
placeholder()
  ::-webkit-input-placeholder
    {block}
  :-moz-placeholder
    {block}
  ::-moz-placeholder
    {block}
  :-ms-input-placeholder
    {block}
/* Fonts Helpers:
=====================================================
  By default template supports only modern font formats:
  .woff, .woffs
  For legacy fonts comment "Default: Modern fonts" mixin and uncomment "Modern and legacy fonts" mixin.

  Usage:
    1. Store your fonts into your fonts directory. By default it is `src/assets/fonts/FOLDERNAME/FONTNAME`
    2. Edit fonts.styl as needed.
    3. Mixin usage example: 
       @include font-face("OpenSans", "../fonts/OpenSans/opensans");

    Required parameters: @family, @family
    Optional parameters: @weight, @style, @pipeline

    Example basi:
      @include font-face("OpenSans", "../fonts/OpenSans/opensans");
    Example custom:
      @include font-face("OpenSans", "../fonts/OpenSans/opensansItalic", 400, italic);
*/
// Default: Modern fonts
// Required file format(s): .woff, .woffs
font-face($font-family, $file-path, $weight = normal, $style = normal, $asset-pipeline = false)
  @font-face
    font-family: $font-family
    font-weight: $weight
    font-style: $style
    src: url("{$file-path}.woff") format("woff"), url("{$file-path}.woff2") format("woff2")
